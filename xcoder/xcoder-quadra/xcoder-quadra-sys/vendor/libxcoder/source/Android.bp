        "-Wno-missing-braces",
        "-Wno-sign-compare",
        "-Wno-return-type",
        "-Wno-pointer-arith",
        "-Wno-pointer-sign",
        "-Wno-enum-conversion",
        "-Wno-unused-parameter",
        "-Wno-pointer-bool-conversion",
        "-Wno-tautological-pointer-compare",
        "-Wno-parentheses",
        "-Wno-tautological-compare",
        "-Wno-absolute-value",
        "-Wno-sometimes-uninitialized",
        "-Wno-unused-variable",
    ] + [
